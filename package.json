{
    "name": "copha",
    "version": "0.0.1",
    "description": "a general framework for running custom network tasks.",
    "keywords": [
        "copha",
        "cli",
        "tools",
        "log",
        "logs",
        "koa",
        "cron",
        "nodejs",
        "framework",
        "selenium",
        "crawler",
        "puppeteer"
    ],
    "repository": "https://github.com/copha-project/copha.git",
    "homepage": "https://copha.net",
    "bugs": {
        "url": "https://github.com/copha-project/copha/issues",
        "email": "contacts@copha.net"
    },
    "bin": {
        "copha": "./bin/index.js"
    },
    "scripts": {
        "dev": "cross-env COPHA_DEBUG=1 NODE_ENV=development ./node_modules/.bin/babel-node -- ./bin/dev.js",
        "start": "cross-env NODE_ENV=development ./node_modules/.bin/babel-node -- ./bin/dev.js",
        "test": "node ./test/index.js",
        "build": "cross-env NODE_ENV=production ./node_modules/.bin/babel --verbose src/ -d dist -D",
        "clear": "node ./dev/clear.js",
        "np": "npm version from-git --force --no-git-tag-version --no-commit-hooks --allow-same-version"
    },
    "main": "./index.js",
    "author": "aong",
    "license": "MIT",
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/node": "^7.14.9",
        "@babel/plugin-proposal-decorators": "^7.14.5",
        "@babel/preset-env": "^7.15.0",
        "babel-plugin-conditional-compile": "^0.0.5",
        "cross-env": "^7.0.3",
        "typescript": "^4.4.2"
    },
    "dependencies": {
        "archiver": "^5.3.0",
        "cli-progress": "^3.4.0",
        "command-exists": "^1.2.9",
        "commander": "^8.1.0",
        "koa": "^2.13.1",
        "koa-compose": "^4.1.0",
        "koa-router": "^10.0.0",
        "ncp": "^2.0.0",
        "open-in-editor": "^2.2.0",
        "pidusage": "^2.0.20",
        "uni-utils": "^1.0.13",
        "winston": "^3.2.1"
    }
}
