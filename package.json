{
    "name": "copha",
    "version": "0.0.11",
    "description": "a general framework for running custom network tasks.",
    "keywords": [
        "copha",
        "cli",
        "tools",
        "log",
        "logs",
        "koa",
        "cron",
        "nodejs",
        "framework",
        "selenium",
        "crawler",
        "puppeteer"
    ],
    "repository": "https://github.com/copha-project/copha.git",
    "homepage": "https://copha.net",
    "bugs": {
        "url": "https://github.com/copha-project/copha/issues",
        "email": "contacts@copha.net"
    },
    "bin": {
        "copha": "./dist/bin/index.js"
    },
    "scripts": {
        "dev": "cross-env COPHA_DEBUG=1 NODE_ENV=development ./node_modules/.bin/ts-node -- ./src/bin/dev.ts",
        "start": "cross-env NODE_ENV=development ./node_modules/.bin/ts-node -- ./src/bin/dev.ts",
        "test": "node ./test/index.js",
        "build": "./node_modules/.bin/gulp",
        "clear": "node ./dev/clear.js",
        "np": "npm version from-git --force --no-git-tag-version --no-commit-hooks --allow-same-version"
    },
    "main": "./dist/index.js",
    "author": "aong",
    "license": "MIT",
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "devDependencies": {
        "cross-env": "^7.0.3",
        "del": "^6.0.0",
        "gulp": "^4.0.2",
        "gulp-typescript": "^6.0.0-alpha.1",
        "merge2": "^1.4.1",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "archiver": "^5.3.0",
        "cli-progress": "^3.4.0",
        "command-exists": "^1.2.9",
        "commander": "^8.1.0",
        "koa": "^2.13.1",
        "koa-compose": "^4.1.0",
        "koa-router": "^10.0.0",
        "ncp": "^2.0.0",
        "open-in-editor": "^2.2.0",
        "pidusage": "^2.0.20",
        "uni-utils": "^1.0.13",
        "winston": "^3.2.1"
    }
}
