{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es5",
        "experimentalDecorators": true,
        // Generate d.ts files
        "declaration": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "typeRoots": ["./node_modules/@types/", "./src/types/"],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }

    },
    "include": ["./src/**/*"],
    "exclude": ["./src/resource"]
}