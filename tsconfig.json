{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "target": "es5",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        // "noImplicitAny": true, 
        "experimentalDecorators": true,
        // Generate d.ts files
        "declaration": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        // "typeRoots": ["./node_modules/@types/", "./types"],
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/types/*"
            ]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/resource"]
}